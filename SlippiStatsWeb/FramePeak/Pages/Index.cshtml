@page
@model FramePeak.Pages.IndexModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Login page";
}

<h2 class="subheader">Please log in</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div style="color: red; text-align: center;">
        @Model.ErrorMessage
    </div>
}

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div style="color: green; text-align: center;">
        @Model.SuccessMessage
    </div>
}

<div style="max-width: 400px; margin: auto;">
    <form method="post">
        <div class="form-group">
            <label for="username">Username:</label>
            <input class="form-control" type="text" id="username" name="Username" required />
        </div>

        <div class="form-group" style="margin-top: 10px;">
            <label for="password">Password:</label>
            <input class="form-control" type="password" id="password" name="Password" required />
        </div>

        <div style="margin-top: 20px; text-align: center;">
            <button class="nav-button" type="submit" name="action" value="login">Log In</button>
            <button class="nav-button" type="submit" name="action" value="create">Create Account</button>
        </div>
    </form>
</div>
