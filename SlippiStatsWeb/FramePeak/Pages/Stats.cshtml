@page
@model FramePeak.Pages.StatsModel
@{
    ViewData["Title"] = "My Stats";
}

<h2 class="subheader">My Performance Stats</h2>

<p>Use the filters below to view your performance by character.</p>

<form method="get" class="form-inline text-center" style="margin-bottom: 20px;">
    <div class="form-group" style="margin: 10px;">
        <label for="character" style="margin-right: 10px;">Character Played:</label>
        <select id="character" name="Character" class="form-control">
            <option value="">-- Select Character --</option>
            @foreach (var c in Model.CharacterList)
            {
                <option value="@c" selected="@(Model.Character == c ? "selected" : null)">@c</option>
            }
        </select>
    </div>

    <div class="form-group" style="margin: 10px;">
        <button type="submit" class="nav-button">Filter Stats</button>
    </div>
</form>

<table class="table table-dark table-bordered table-striped">
    <thead>
        <tr>
            <th>Metric</th>
            <th>Result</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Wins</td>
            <td>@Model.CharWinCount</td>
        </tr>
        <tr>
            <td>Losses</td>
            <td>@Model.CharLossCount</td>
        </tr>
        <tr>
            <td>Average Stocks Taken</td>
            <td>@Model.CharAvgStocksTaken</td>
        </tr>
        <tr>
            <td>Average Stocks Lost</td>
            <td>@Model.CharAvgStocksLost</td>
        </tr>
        <tr>
            <td>Average Damage Dealt</td>
            <td>@Model.CharAvgDmgDealt</td>
        </tr>
        <tr>
            <td>Average Damage Taken</td>
            <td>@Model.CharAvgDmgTaken</td>
        </tr>
        <tr>
            <td>Average L-Cancel %</td>
            <td>@Model.CharAvgLCancel</td>
        </tr>
    </tbody>
</table>

<p class="text-center">
    <a class="nav-button" asp-page="/FileUpload">Submit Another File</a>
</p>
