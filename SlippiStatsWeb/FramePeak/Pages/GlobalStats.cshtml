@page
@* @model SlippiStatsWeb.Pages.GlobalStatsModel *@
@{
    ViewData["Title"] = "Global Stats";
}

<h2 class="subheader">Global Stats (All Users)</h2>

<p>If you'd like to see your own performance, visit the <a asp-page="/Stats">My Stats Page</a>.</p>

<table class="table table-dark table-bordered table-hover">
    <thead>
        <tr>
            <th>Metric</th>
            <th>Result</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Average L-Cancel %</td>
            <td>[Insert Query Result]</td>
        </tr>
        <tr>
            <td>Average Damage Dealt</td>
            <td>[Insert Query Result]</td>
        </tr>
        <tr>
            <td>Average Damage Taken</td>
            <td>[Insert Query Result]</td>
        </tr>
        <tr>
            <td>Total Matches Played</td>
            <td>[Insert Query Result]</td>
        </tr>
        <tr>
            <td>Top 3 Characters by Win Rate</td>
            <td>
                <ol>
                    <li>[Char 1] – [Win %]</li>
                    <li>[Char 2] – [Win %]</li>
                    <li>[Char 3] – [Win %]</li>
                </ol>
            </td>
        </tr>
        <tr>
            <td>Bottom 3 Characters by Win Rate</td>
            <td>
                <ol>
                    <li>[Char 1] – [Win %]</li>
                    <li>[Char 2] – [Win %]</li>
                    <li>[Char 3] – [Win %]</li>
                </ol>
            </td>
        </tr>
        <tr>
            <td>Top 3 Characters by Usage</td>
            <td>
                <ol>
                    <li>[Char 1] – [Usage %]</li>
                    <li>[Char 2] – [Usage %]</li>
                    <li>[Char 3] – [Usage %]</li>
                </ol>
            </td>
        </tr>
    </tbody>
</table>
